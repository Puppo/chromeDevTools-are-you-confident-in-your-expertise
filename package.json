{
  "name": "devtools-demo",
  "version": "1.0.0",
  "description": "A monorepo showcasing the benefits of Chrome Developer Tools with Fastify backend and Next.js frontend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "migration": "pnpm -r --if-present run db:migrate",
    "seed": "pnpm -r --if-present run db:seed",
    "dev": "pnpm run --parallel dev",
    "start": "pnpm --filter @devtools-demo/api run build && pnpm run --parallel start",
    "build": "pnpm run -r build",
    "lint": "pnpm -r --if-present run lint",
    "type-check": "pnpm -r --if-present run type-check",
    "test": "pnpm -r --if-present run test",
    "clean": "rm -rf node_modules {packages,apps}/*/node_modules {packages,apps}/*/dist apps/*/.next"
  },
  "devDependencies": {
    "concurrently": "catalog:",
    "typescript": "catalog:"
  },
  "keywords": [
    "chrome-devtools",
    "monorepo",
    "fastify",
    "nextjs",
    "typescript",
    "react",
    "tailwind"
  ],
  "author": "Luca Del Puppo",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}