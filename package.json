{
  "name": "devtools-demo",
  "version": "1.0.0",
  "description": "A monorepo showcasing the benefits of Chrome Developer Tools with Fastify backend and Next.js frontend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "migration": "npm run --workspace=\"{packages,apps}/**\" --if-present db:migrate",
    "seed": "npm run --workspace=\"{packages,apps}/**\" --if-present db:seed",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:api": "npm run dev --workspace=packages/api",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm run start --workspace=apps/backend",
    "start:frontend": "npm run start --workspace=apps/frontend",
    "build": "npm run --workspace=\"{packages,apps}/**\" --if-present build",
    "lint": "npm run --workspace=\"{packages,apps}/**\" --if-present lint",
    "type-check": "npm run --workspace=\"{packages,apps}/**\" --if-present type-check",
    "test": "npm run --workspace=\"{packages,apps}/**\" --if-present test",
    "clean": "rm -rf node_modules {packages,apps}/*/node_modules {packages,apps}/*/dist apps/*/.next"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.5.4"
  },
  "keywords": [
    "chrome-devtools",
    "monorepo",
    "fastify",
    "nextjs",
    "typescript",
    "react",
    "tailwind"
  ],
  "author": "Luca Del Puppo",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}