{
  "name": "backend",
  "version": "1.0.0",
  "description": "Fastify backend showcasing Chrome DevTools capabilities",
  "main": "dist/server.js",
  "scripts": {
    "dev": "FASTIFY_AUTOLOAD_TYPESCRIPT=1 node --import tsx --watch --env-file ../../.env --inspect src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "db:migrate": "postgrator --config ./migrations/.postgratorrc.json",
    "db:migrate:rollback": "postgrator --config ./migrations/.postgratorrc.json --undo",
    "db:seed": "postgrator --config ./seeds/.postgratorrc.json",
    "db:seed:rollback": "postgrator --config ./seeds/.postgratorrc.json --undo"
  },
  "dependencies": {
    "@devtools-demo/api": "file:../../packages/api",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/postgres": "^6.0.2",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@nearform/sql": "^1.10.7",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^5.0.3",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "postgrator": "^8.0.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "postgrator-cli": "^9.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "fastify",
    "typescript",
    "api",
    "chrome-devtools"
  ],
  "author": "Your Name",
  "license": "MIT"
}
